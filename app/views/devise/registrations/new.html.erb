<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
  </div>

  <div>
    <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-gray-700 font-bold mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
  </div>

  <div>
    <%= f.submit "Sign up", class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
