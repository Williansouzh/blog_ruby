<div class="max-w-md mx-auto bg-white p-8 rounded shadow-lg">
  <h2 class="text-3xl font-bold mb-6">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block text-sm font-semibold text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= f.submit "Send me reset password instructions", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md w-full" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
