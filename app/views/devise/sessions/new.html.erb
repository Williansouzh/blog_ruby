<div class="max-w-md mx-auto bg-white p-8 rounded shadow-lg">
  <h2 class="text-2xl font-bold mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "form-checkbox" %>
        <%= f.label :remember_me, class: "text-sm text-gray-600 ml-2" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in", class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
