<%= form_with model: @blog_post do |form| %>

  <% if form.object.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <% form.object.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :title, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :body, class: "form-textarea mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
  </div>

  <%= form.submit "Submit", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md" %>

<% end %>
